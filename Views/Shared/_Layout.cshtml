<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewData["Title"] - User Manager</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        a.table-sort {
            color: #52311B;
            text-decoration: none;
            font-weight: 600;
        }

        a.table-sort:hover {
            color: #86612F;
            text-decoration: underline;
        }

        body {
            background: #FAFAFA;
            color: #575C55;
        }

        .navbar-dark {
            background-color: #52311B !important;
        }

        .btn-primary {
            background-color: #86612F;
            border-color: #86612F;
        }
        .btn-primary:hover {
            background-color: #52311B;
            border-color: #52311B;
        }
        .btn-warning {
            background-color: #D0D2CF;
            border-color: #D0D2CF;
            color: #52311B;
        }
            .btn-warning:hover {
                background-color: #575C55;
                border-color: #575C55;
                color: white;
            }

        .table thead {
            background-color: #D0D2CF;
            color: #52311B;
        }

        .card {
            border-color: #D0D2CF;
        }
        .btn:focus,
        .btn:active,
        .btn:focus:active {
            box-shadow: none !important;
            outline: none !important;
        }
        .btn-primary:focus,
        .btn-primary:active {
            background-color: #52311B !important;
            border-color: #52311B !important;
        }
        .btn-warning:focus,
        .btn-warning:active {
            background-color: #575C55 !important;
            border-color: #575C55 !important;
            color: white !important;
        }
        .btn-danger:focus,
        .btn-danger:active {
            background-color: #52311B !important;
            border-color: #52311B !important;
        }
        .btn-outline-danger:focus,
        .btn-outline-danger:active {
            background-color: #86612F !important;
            border-color: #86612F !important;
            color: white !important;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/Users/Index">User Manager</a>

            <div class="d-flex">
                <a class="btn btn-outline-light btn-sm" href="/Auth/Logout">
                    <i class="bi bi-box-arrow-right"></i> Выйти
                </a>
            </div>
        </div>
    </nav>

    <div class="container content-wrapper">
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
